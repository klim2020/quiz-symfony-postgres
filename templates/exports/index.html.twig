{% extends 'base.html.twig' %}


{% block title %}Hello ExportsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1200px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Export Table Output</h1>
    <table class="rtable">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Deliver Name</th>
            <th>Location</th>

        </tr>
        </thead>

        <tbody>
        {% for export in exports %}
            <tr>
                <td>{{ export.getId() }}</td>
                <td>{{ export.getName() }}</td>
                <td>{{ export.getData() |date('d-m-Y')}}</td>
                <td>{{ export.getTime() |date('H:i:s') }}</td>
                <td>{{ export.getDeliveryName() }}</td>
                <td>{{ export.getLocation().getLocation() }}</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
